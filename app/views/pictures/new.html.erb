<h2>Create the picture</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@picture) do |f| %>
   
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :url %>
      <%= f.url_field :url, class: 'form-control' %>

     
      <%= f.submit "Save a picture", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>